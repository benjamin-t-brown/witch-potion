{
  "Event Template": {
    "prefix": "event",
    "body": [
      "!${1:Event Title},${2:icon_name}",
      "@A=${3:variable definition}",
      "@B=${4:variable definition}",
      ">0,choice",
      "  +p: ${5:Event description}",
      "  +c: 1|${6:First choice} @A",
      "  +c: e|${7:Second choice}",
      "  +c: 2|${8:Third choice} @B|HAS(@B)",
      ">1,dice",
      "  +p: ${9:Dice roll description}",
      "  +dice: @A",
      "  +pass: ${10:3}",
      "  +fail: ${11:4}",
      ">e,end",
      ">${12:3},modify",
      "  +p: ${13:Success description}",
      "  +add: @B",
      "  +next: e",
      ">${14:4},modify",
      "  +p: ${15:Failure description}",
      "  +rem: @A",
      "  +next: e"
    ],
    "description": "Complete event template with variables, choice, dice roll, and outcomes"
  },
  "Event Header": {
    "prefix": "header",
    "body": [
      "!${1:Event Title},${2:icon_name}"
    ],
    "description": "Event header with title and icon"
  },
  "Variable Definition": {
    "prefix": "var",
    "body": [
      "@${1:A}=${2:variable value}"
    ],
    "description": "Define a variable"
  },
  "Choice Node": {
    "prefix": "choice",
    "body": [
      ">${1:0},choice",
      "  +p: ${2:Choice description}",
      "  +c: ${3:1}|${4:First choice}",
      "  +c: ${5:e}|${6:Second choice}",
      "  +c: ${7:2}|${8:Third choice}|HAS(@${9:A})"
    ],
    "description": "Choice node with description and options"
  },
  "Dice Node": {
    "prefix": "dice",
    "body": [
      ">${1:1},dice",
      "  +p: ${2:Dice roll description}",
      "  +dice: @${3:A}",
      "  +pass: ${4:3}",
      "  +fail: ${5:4}"
    ],
    "description": "Dice roll node with description and thresholds"
  },
  "Modify Node": {
    "prefix": "modify",
    "body": [
      ">${1:3},modify",
      "  +p: ${2:Modification description}",
      "  +add: @${3:A}",
      "  +next: ${4:e}"
    ],
    "description": "Resource modification node"
  },
  "End Node": {
    "prefix": "end",
    "body": [
      ">e,end"
    ],
    "description": "End node"
  },
  "Description": {
    "prefix": "desc",
    "body": [
      "  +p: ${1:Description text}"
    ],
    "description": "Description line"
  },
  "Choice Option": {
    "prefix": "opt",
    "body": [
      "  +c: ${1:1}|${2:Choice text}"
    ],
    "description": "Choice option"
  },
  "Choice Option with Condition": {
    "prefix": "opt-has",
    "body": [
      "  +c: ${1:1}|${2:Choice text}|HAS(@${3:A})"
    ],
    "description": "Choice option with HAS condition"
  },
  "Dice Specification": {
    "prefix": "dice-spec",
    "body": [
      "  +dice: @${1:A}"
    ],
    "description": "Dice specification with variable"
  },
  "Add Resources": {
    "prefix": "add",
    "body": [
      "  +add: @${1:A}"
    ],
    "description": "Add resources using variable"
  },
  "Remove Resources": {
    "prefix": "rem",
    "body": [
      "  +rem: @${1:A}"
    ],
    "description": "Remove resources using variable"
  },
  "Next Node": {
    "prefix": "next",
    "body": [
      "  +next: ${1:e}"
    ],
    "description": "Next node reference"
  },
  "Pass Threshold": {
    "prefix": "pass",
    "body": [
      "  +pass: ${1:3}"
    ],
    "description": "Pass threshold"
  },
  "Fail Threshold": {
    "prefix": "fail",
    "body": [
      "  +fail: ${1:4}"
    ],
    "description": "Fail threshold"
  },
  "Variable Usage": {
    "prefix": "var-usage",
    "body": [
      "@${1:A}"
    ],
    "description": "Use a variable"
  },
  "HAS Condition": {
    "prefix": "has",
    "body": [
      "|HAS(@${1:A})"
    ],
    "description": "HAS condition for choice options"
  }
}
